# ============================================
# MONGODB - Configurações do Banco de Dados
# ============================================
MONGODB_USERNAME=admin
MONGODB_PASSWORD=admin123
MONGODB_DATABASE=bedrock_db
MONGODB_PORT=27017

# ============================================
# API - Configurações do Servidor API
# ============================================
NODE_ENV=production
# NODE_ENV=development  # Use 'development' para habilitar hot-reload (watch mode)
API_PORT=3000

# ============================================
# BEDROCK SERVER - Configurações Principais
# ============================================
BEDROCK_EULA=TRUE
BEDROCK_SERVER_NAME=Bedrock Server
BEDROCK_GAMEMODE=survival
BEDROCK_FORCE_GAMEMODE=false
BEDROCK_DIFFICULTY=easy
BEDROCK_ALLOW_CHEATS=true
BEDROCK_MAX_PLAYERS=10
BEDROCK_ONLINE_MODE=true
BEDROCK_WHITE_LIST=false
BEDROCK_SERVER_PORT=19132
BEDROCK_SERVER_PORT_V6=19133
BEDROCK_PORT_IPV4=19132
BEDROCK_PORT_IPV6=19133

# ============================================
# BEDROCK SERVER - Configurações de Rede
# ============================================
BEDROCK_ENABLE_LAN_VISIBILITY=true
BEDROCK_VIEW_DISTANCE=32
BEDROCK_TICK_DISTANCE=4
BEDROCK_PLAYER_IDLE_TIMEOUT=30
BEDROCK_MAX_THREADS=8

# ============================================
# BEDROCK SERVER - Configurações de Mundo
# ============================================
BEDROCK_LEVEL_NAME=Bedrock level
BEDROCK_LEVEL_SEED=
BEDROCK_DEFAULT_PLAYER_PERMISSION_LEVEL=member
BEDROCK_TEXTUREPACK_REQUIRED=false

# ============================================
# BEDROCK SERVER - Configurações de Log
# ============================================
BEDROCK_CONTENT_LOG_FILE_ENABLED=false
BEDROCK_CONTENT_LOG_CONSOLE_OUTPUT_ENABLED=true
BEDROCK_CONTENT_LOG_LEVEL=info

# ============================================
# BEDROCK SERVER - Configurações de Rede Avançadas
# ============================================
BEDROCK_COMPRESSION_THRESHOLD=1
BEDROCK_COMPRESSION_ALGORITHM=zlib

# ============================================
# BEDROCK SERVER - Movimento e Anti-Cheat
# ============================================
BEDROCK_SERVER_AUTHORITATIVE_MOVEMENT=server-auth
BEDROCK_SERVER_AUTHORITATIVE_MOVEMENT_STRICT=false
BEDROCK_SERVER_AUTHORITATIVE_DISMOUNT_STRICT=false
BEDROCK_SERVER_AUTHORITATIVE_ENTITY_INTERACTIONS_STRICT=false
BEDROCK_PLAYER_POSITION_ACCEPTANCE_THRESHOLD=0.5
BEDROCK_PLAYER_MOVEMENT_ACTION_DIRECTION_THRESHOLD=0.85
BEDROCK_PLAYER_MOVEMENT_DURATION_THRESHOLD=500
BEDROCK_PLAYER_MOVEMENT_SCORE_THRESHOLD=20
BEDROCK_PLAYER_MOVEMENT_DISTANCE_THRESHOLD=0.3
BEDROCK_CORRECT_PLAYER_MOVEMENT=true
BEDROCK_SERVER_AUTHORITATIVE_BLOCK_BREAKING=false
BEDROCK_SERVER_AUTHORITATIVE_BLOCK_BREAKING_PICK_RANGE_SCALAR=1.5

# ============================================
# BEDROCK SERVER - Chat e Interações
# ============================================
BEDROCK_CHAT_RESTRICTION=None
BEDROCK_DISABLE_PLAYER_INTERACTION=false

# ============================================
# BEDROCK SERVER - Geração de Chunks
# ============================================
BEDROCK_CLIENT_SIDE_CHUNK_GENERATION_ENABLED=true
BEDROCK_SERVER_BUILD_RADIUS_RATIO=Disabled

# ============================================
# BEDROCK SERVER - Outras Configurações
# ============================================
BEDROCK_BLOCK_NETWORK_IDS_ARE_HASHES=true
BEDROCK_DISABLE_PERSONA=false
BEDROCK_DISABLE_CUSTOM_SKINS=false
BEDROCK_ALLOW_OUTBOUND_SCRIPT_DEBUGGING=false
BEDROCK_ALLOW_INBOUND_SCRIPT_DEBUGGING=false
BEDROCK_SCRIPT_DEBUGGER_AUTO_ATTACH=disabled
